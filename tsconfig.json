{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["controllers/**/*.ts", "routes/**/*.ts", "index.ts", "types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 